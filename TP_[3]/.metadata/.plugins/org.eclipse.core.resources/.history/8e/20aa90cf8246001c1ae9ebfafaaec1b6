#include <stdio.h>
#include <stdlib.h>
#include "LinkedList.h"
#include "Controller.h"
#include "Employee.h"

/****************************************************
    Menu:
     1. Cargar los datos de los empleados desde el archivo data.csv (modo texto).
     2. Cargar los datos de los empleados desde el archivo data.csv (modo binario).
     3. Alta de empleado
     4. Modificar datos de empleado
     5. Baja de empleado
     6. Listar empleados
     7. Ordenar empleados
     8. Guardar los datos de los empleados en el archivo data.csv (modo texto).
     9. Guardar los datos de los empleados en el archivo data.csv (modo binario).
    10. Salir
*****************************************************/



int main()
{

    int option;

    LinkedList* listaEmpleados = ll_newLinkedList();
	setbuf(stdout,NULL);
    int flag=0;
    int flagBin=0;

    printf("Bienvenido, elija una opcion \n\n");
    do{
    	option=menuTen();
        switch(option)
        {
            case 1:
            	printf("\n Usted ha seleccionado 1: Cargar Empleados Modo Texto\n\n");
			//if (flag == 0 && flagBin == 0)
			//{
				if (controller_loadFromText("data.csv", listaEmpleados)==0)
				{
					printf("La carga de texto fue exitosa");
				//	flag = 1;
				}else
				{
					printf("Error en la carga de Texto");
				}
			}else{
				printf("Los datos en modo texto ya fueron cargados");
			}
                break;
            case 2:
            	printf("\n Usted ha seleccionado 2: Cargar Empleados Modo Binario\n\n");
			if (flag == 0 && flagBin == 0) {
				if (controller_loadFromText("data.csv", listaEmpleados)) {
					printf("La carga de texto fue exitosa");
					flagBin = 1;
				} else {
					printf("Error en la carga de Texto");
				}
			} else {
				printf("Los datos en modo texto ya fueron cargados");
			}
            	break;
            case 3:
            	printf("\n Usted ha seleccionado 3: Dar de alta un Empleado\n\n");
            	if(flagBin==1 || flag==1)
            	{
            		controller_addEmployee(listaEmpleados);
            	}
            	break;
            case 4:
            	printf("\n Usted ha seleccionado 4: Modificar un Empleado\n\n");
            	break;
            case 5:
            	printf("\n Usted ha seleccionado 5: Dar de Baja un Empleado\n\n");
            	break;
            case 6:
            	printf("\n Usted ha seleccionado 6: Dar de Baja un Empleado\n\n");
            	break;
            case 7:
            	printf("\n Usted ha seleccionado 7: Dar de Baja un Empleado\n\n");
            	break;
            case 8:
            	printf("\n Usted ha seleccionado 8: Dar de Baja un Empleado\n\n");
            	break;
            case 9:
            	printf("\n Usted ha seleccionado 9: Dar de Baja un Empleado\n\n");
            	break;
            case 10:
            	printf("Hasta Luego \n");
            	break;
        }
    }while(option!=10);
    return 0;
}

